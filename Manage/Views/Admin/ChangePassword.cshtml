@model JXDL.Manage.Models.Admin.ChangePasswordViewModel
@using System.Web.Optimization
@{
    ViewBag.Title = "更改密码";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@section JS {
    @Scripts.Render("~/bundles/jqueryval")
}

<body class="hold-transition sidebar-mini" style="background-color:#ecf0f5;">
    <div class="wrapper">
        <!-- Content Wrapper. Contains page content -->
        <div >
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    更改密码
                </h1>
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-12">
                        <!-- general form elements -->
                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title"></h3>
                            </div><!-- /.box-header -->
                            <!-- form start -->
                            <div class="row">
                                <div class="col-md-6">
                                    @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post, new { role = "form" }))
                                    {
                                        <div class="box-body">
                                            <div class="form-group">
                                                <label >原始密码</label>
                                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "请输入原始密码" })
                                                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                <label >新密码</label>
                                                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "请输入新密码" })
                                                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                <label >确认新密码</label>
                                                @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", placeholder = "请确认新密码" })
                                                @Html.ValidationMessageFor(m => m.ConfirmNewPassword,"", new { @class = "text-danger" })
                                            </div>
                                            <div class="checkbox text-">
                                                <label>
                                                    <p>@Html.ValidationSummary(true, "", new { @class = "text-danger" })</p>
                                                </label>
                                            </div>
                                        </div><!-- /.box-body -->

                                        <div class="box-footer">
                                            <button type="submit" class="btn btn-primary">更新</button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div><!-- /.box -->
                    </div><!--/.col (left) -->
                </div>   <!-- /.row -->
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
    </div><!-- ./wrapper -->
</body>

